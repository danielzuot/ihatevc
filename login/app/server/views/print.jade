
extends layout

block content

	div.container(style='margin:20px')
		form(method='get', action='/')
			button.btn.btn-default.btn-warning BACK
		table.table.table-bordered.table-striped
				thead
					tr
						th(style='width:20px')
						th(style='width:100px') Restaurant Name
						th(style='width:150px') Address
						th(style='width:150px') City
						th(style='width:40px') State
						th(style='width:60px') Zip
						th(style='width:80px') Country
						th(style='width:80px') Menu
				tbody
				- for (var i = 0; i < accts.length; i++)
					tr 
						td= i+1
						td
							a(href="/filter/?restname=" + accts[i].restname) #{accts[i].restname}
						td= accts[i].address
						td= accts[i].city
						td= accts[i].state
						td= accts[i].zip
						td= accts[i].country
						td Menu